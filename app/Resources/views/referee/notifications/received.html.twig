{% extends 'base.html.twig' %}
{% block content %}
    <h1>Přijaté notifikace</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Nadpis</th>
            <th>Text</th>
            <th>Odesílatel</th>
            <th>Datum</th>
        </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td><a href="{{ path('notifications_detail', {'id': notification.id}) }}">{{ notification.title }}</a></td>
                <td>{{ notification.text }}</td>
                <td>{{ notification.sender.username }}</td>
                <td>{{ notification.date|date('d.m.Y H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}